<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_arrow_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.111"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_arrow_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.022"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_arrow_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_title_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.144"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.044"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.956"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_actionbar_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_actionbar_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.086"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_text_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.138"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_text_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.175"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_edittext_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.188"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_edittext_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.257"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_button_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.332"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_button_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_error_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.282"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_error_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.311"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gray_underbar_square"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_actionbar_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_actionbar_bottom">
    </RelativeLayout>

    <ImageView
        android:id="@+id/signup_email_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icon_arrow"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_arrow_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_arrow_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="학교 인증"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_title_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_arrow_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_arrow_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="대학 포털 이메일 주소를 입력해주세요."
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_text_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_text_bottom" />

    <EditText
        android:id="@+id/signup_email_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_border_square"
        android:hint="name@example.com"
        android:paddingStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_edittext_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_edittext_bottom" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_error_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_error_bottom" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/kakaotalk_ic"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text="  올바르지 않은 이메일 형식입니다."
            android:gravity="start"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_email_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_square"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_button_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_button_bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="인증코드 발송"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>