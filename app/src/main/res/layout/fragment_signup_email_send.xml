<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_arrow_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.111"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_arrow_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.022"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_arrow_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_title_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.144"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_left"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.044"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.956"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_actionbar_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_actionbar_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.086"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_text_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.138"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_text_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.175"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_button_resend_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.302"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_button_resend_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.371"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_button_resend_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.433"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_button_next_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.555"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_button_next_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.633"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_notice_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.421"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/gd_signup_email_send_notice_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gray_underbar_square"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_actionbar_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_actionbar_bottom">
    </RelativeLayout>

    <ImageView
        android:id="@+id/signup_email_send_arrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icon_arrow"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_send_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_arrow_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_arrow_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="학교 인증"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_title_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_arrow_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_arrow_bottom" />

    <TextView
        android:id="@+id/signup_email_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="이메일을 확인해주세요"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_text_top"/>

    <TextView
        android:id="@+id/signup_email_send_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/tomato"
        android:text="hello@covey.com"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintTop_toBottomOf="@id/signup_email_send_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="로 발송되었습니다."
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintTop_toBottomOf="@id/signup_email_send_address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:text="※ 이메일이 오지 않는 경우,\ncovey@covey.com으로 연락주세요."
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_notice_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_notice_bottom" />

    <RelativeLayout
        android:id="@+id/signup_email_send_button_resend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/red_border_square"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_send_button_resend_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_button_resend_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_button_resend_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="이메일 재전송하기"
            android:textColor="#484848"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_email_send_button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_square"
        app:layout_constraintLeft_toRightOf="@id/gd_signup_email_send_left"
        app:layout_constraintRight_toLeftOf="@id/gd_signup_email_send_right"
        app:layout_constraintTop_toBottomOf="@id/gd_signup_email_send_button_next_top"
        app:layout_constraintBottom_toTopOf="@id/gd_signup_email_send_button_next_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="다음"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>